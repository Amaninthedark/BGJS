.panel{
    margin-top: 10px;
    background: #fff;
    width: 100%;
    padding:5px;
}
.container{

    margin-left: 5%;

}
.name{
    display: flex;
}
.name text{
    font-size: 0.9rem;
     padding: 3px 0;
      width: 40px;
  
}
.name input{
    margin-left: 5px;
    padding: 5px;
}
.name textarea{
    margin-left: 5px;
    padding: 5px;
}
.title{
    font-size: 0.9rem;
    border-bottom: 1px solid #d9d9d9;
    padding: 5px 0;
}
.title text{
    color: #4a4a4a;
}
.add_card{
    display: flex;
    padding: 20px 0;
}

.add_card .card{
    width: 105px;
    height: 100px;   
    
    border-radius: 2px;
    display: block;
    
}
.add_card .card .card_image{
    width: 100%;
    height: 100%;
}
.add_card .card .none_card_image{      
    width: 100%;
    height: 100%;
    border: 1px dashed #9c9c9c;
}
.add_card .card .none_card_image image{
    width:39px;
    height: 30px;
    margin: 0 auto;
    display: block;
    margin-top:23px;
}
.add_card .card .none_card_image text{
    display: block;
    text-align: center;
    margin-top: 10px;
     color: #4a4a4a;
}
.add_card .card:nth-child(2){
    margin-left: 10px;
}


.demo text{
    font-size: 0.9rem;
    padding: 5px 0;
}
textarea{
    height: 70px;
    margin-top: 2px;
    width: 90%;
  
}
.btn{
    width: 85%;
    background: #56a4ff;
    color: #fff;
    margin-top:20px;
    height: 40px;
    line-height: 40px;
}
