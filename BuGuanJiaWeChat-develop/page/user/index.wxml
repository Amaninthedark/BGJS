<view class="page">
  <view class="header_box linear">
    <view class="header_img">
      <image src="{{avatar}}" />
    </view>
    <view class="header_title">
      <text>{{userName}}</text>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title info_box">
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" catchtap="toCard">
      <image class="info_icon" src="/image/mycard.png" />
      <view class="weui-cell__bd ml10">我的名片</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" catchtap="toCompany">
      <image class="info_icon" src="/image/my_sample_icon_hover.png" />
      <view class="weui-cell__bd ml10">我的样品间</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
    <view class="weui-cell weui-cell_access rmb20" hover-class="weui-cell_active" catchtap="toShareToMe">
      <image class="info_icon" src="/image/shareToMe.png" />
      <view class="weui-cell__bd ml10">分享给我的样品</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>

    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="handlePlayvideo">
      <image class="info_icon" src="/image/videoPlay.png" />
      <view class="weui-cell__bd ml10">视频介绍</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
     <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="handlePlayvideo">
      <image class="info_icon" src="/image/link.png" />
      <view class="weui-cell__bd ml10">我的企业小程序</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
    
    <navigator url="./pages/guide/guide?hidden=true" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <image class="info_icon" src="/image/about_us.png" />
      <view class="weui-cell__bd ml10">关于我们</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
</view>
<view class="fiex-bottom">
  <view catchtap="handleGoIndex">
    <image src="/image/bottom_bu.png"></image>
    <text>首页</text>
  </view>
  <view catchtap="handleGoManage">
    <image src="/image/center-yp.png"></image>
    <text>样品</text>
  </view>
  <view catchtap="toMiniProgram1">
    <image src="/image/center-order_1.png"></image>
    <text>订单</text>
  </view>
  <view class="active">
    <image src="/image/user_center_hover.png"></image>
    <text>我的</text>
  </view>
</view>

