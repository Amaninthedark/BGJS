
.header_box{
  width: 100%;
  height:200rpx;
  text-align: center;
  padding-top: 30px;
  padding-bottom: 20px;
 
}
.header_img{
width: 40px;
height: 40px; 
line-height: 50px;
  border-radius: 50%;
  overflow: hidden;
  text-align: center;
  margin: 0 auto;


}
.header_img image{
  height: 40px;
  width: 40px;
}
.header_title{
  height: 20px;
  line-height: 20px;
  color: #fff;
  font-size: 1rem;
  margin-top: 30rpx;

}
.linear{ 
  width:100%;
  background:-webkit-gradient(linear, 0% 0%, 0% 100%,from(#0176ff), to(#55a3ff));
} 
.content{
    width: 90%;
    background: #fff;
    padding: 20px 5%;
    font-size: 0.755rem;
    line-height: 1.5rem;
    letter-spacing: 0.07em;
     color: #7a7a7a;
   
}
.content text{
    width: 90%;
    margin: 15px 5%;
    font-size: 0.805rem;
}
.contact{
    width: 100%;
    text-align: center;
    margin-top: 10px;
    background: #fff;
     padding: 20px 0;
     

}
.contact text{
    display: block;
    line-height: 1.6rem;
    font-size: 0.755rem;
     color: #7a7a7a;

   
}
.contact .title{
    font-size: 0.963rem;
    margin-bottom: 10px;

}