
.panel{
    background: #fff;
   padding-left: 15px;
    margin-bottom: 15px;
}
.sample_detail,.provider_detail{
    padding-bottom: 10px;
}
.title{
    padding:8px 0; 
    align-items:center;  
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    clear: both;

}
.title .text{
   padding: 0;
   width: 50%;
   float: left;
   font-size: 0.946rem;
   color: #000;

}
.title .line{
    -webkit-box-flex:1;
    flex-grow:1;
    height: 0;
    border-bottom: 1px solid #e5e5e5;
}
.title .slide{
    width: 50%;  
   padding-bottom: 10px;
   padding-top: 10px;
    clear: both;
}
.title .slide image{
    width: 15px;
    height: 8px;
    float: right;
    margin-right: 15px;
}

.content{
    clear: both;
    overflow: hidden;
    display: block;

}
.content .ul{
    width: 100%;
    padding:0px 10px 10px 0;
    /*border-bottom: 1px solid #e5e5e5;*/
    margin-top: 10px;
    overflow: hidden;

}
.img_content .ul .li{
    width: 50%;
    display: block;
    overflow: hidden;
    height: 120px;
    float: left;
    margin-bottom: 10px;

}
.content .ul .li image{
    width: 90%;
    height: 120px;
    
    margin: 0 auto;
}
.content text{
    display: block;
    padding-top: 10px;
    color: #9b9b9b;
}
.slide-up image{
    motion-rotation:180deg;
}
.no_pic{
    display: block;
    width: 100%;
    height: 40px;
    padding-top: 20px;
    padding-left: 20px;
    color: #9b9b9b;

}
.label_detail .content{
  
    padding-bottom: 10px;
}
.label_detail .content text{
    padding: 5px 10px;
    border: 1px solid #e5e5e5;
    color: #a5a5a5;
    background: #f5f5f5;
    border-radius: 3px;
    font-size: 0.8rem;
    height: 20px;
    float: left;
    margin-top: 10px;
   
}

.label_detail .content text:not(:first-child){
    margin-left: 10px;
}

/*样品备注*/
.demo_input{
    margin-top: 10px;
    border: 1px solid #e5e5e5;
    padding: 5px 10px;
    width: 90%;
    margin-right: 3%;
}
.demo_list{
    width: 100%;
    border-bottom: 1px solid #e5e5e5;

    
} 
.demo_list .li{
    display: flex;
}
.demo_list .li .text{
    width: 85%;
    display: flex;
}
.demo_list .li .text .name{
  
    word-break:keep-all;         
    white-space:nowrap;         
}
.demo_list .li .text .demo_content{
  
   color: #4a4a4a;   
   word-wrap:break-word;
   word-break: break-all;    
}
.demo_list .li .edit{
    width: 15%;
    display: flex;
}
.demo_list .li .edit text{
    margin-left: 5px;
}
